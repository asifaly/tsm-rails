<div class="container mx-auto my-8 px-4">

  <div class="flex justify-between items-center mb-4">
    <h1 class="h3">Received Offers</h1>
  </div>
  <% if @received_offers.any? %>
    <%= render "received", received_offers: @received_offers, pagyr: @pagyr%>
  <% else %>
    <pre> No Offers Received</pre>
  <% end %>

  <div class="flex justify-between items-center mb-4">
    <h1 class="h3">Created Offers</h1>

    <% if @offers.any? %>
      <%= link_to t("shared.scaffold.new.title", model: "Offer"), new_offer_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <% if @offers.any? %>
    <%= render "created", created_offers: @offers, pagyc: @pagyc %>
  <% else %>
    <div class="bg-white rounded shadow flex flex-col items-center justify-between p-8 lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="h3 mb-4">Create your first Offer</p>
        <%= link_to t("shared.scaffold.new.title", model: "Offer"), new_offer_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
