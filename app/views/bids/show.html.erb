      </div>
            <div class="mb-4">
        <h5>Base rate</h5>
        <%= @bid.base_rate %>
      </div>
            <div class="mb-4">
        <h5>Rate</h5>
        <%= @bid.rate %>
      </div>
            <div class="mb-4">
        <h5>Spread</h5>
        <%= @bid.spread %>
      </div>
            <div class="mb-4">
