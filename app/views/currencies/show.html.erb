<div class="container mx-auto my-8 px-4">
  <div class="max-w-3xl mx-auto">
    <div class="flex justify-between items-center mb-4">
      <h1 class="h3"><%= link_to "Currencies", currencies_path %> > Currency #<%= @currency.id %></h1>
      <%= link_to t("edit"), edit_currency_path(@currency), class: "btn btn-link" %>
    </div>

    <div class="bg-white rounded shadow p-8">
            <div class="mb-4">
        <h5>Code</h5>
        <%= @currency.code %>
      </div>
            <div class="mb-4">
        <h5>Iso code</h5>
        <%= @currency.iso_code %>
      </div>
            <div class="mb-4">
        <h5>Description</h5>
        <%= @currency.description %>
      </div>
          </div>
  </div>
</div>
