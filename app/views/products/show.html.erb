<div class="container mx-auto my-8 px-4">
  <div class="max-w-3xl mx-auto">
    <div class="flex justify-between items-center mb-4">
      <h1 class="h3"><%= link_to "Products", products_path %> > Product #<%= @product.id %></h1>
      <%= link_to t("edit"), edit_product_path(@product), class: "btn btn-link" %>
    </div>

    <div class="bg-white rounded shadow p-8">
            <div class="mb-4">
        <h5>Description</h5>
        <%= @product.description %>
      </div>
            <div class="mb-4">
        <h5>Funded</h5>
        <%= @product.funded.to_s.titleize %>
      </div>
            <div class="mb-4">
        <h5>Base product</h5>
        <%= @product.base_product.description %>
      </div>
          </div>
  </div>
</div>
